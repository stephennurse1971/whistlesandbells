{% extends 'base.html.twig' %}

{% block title %}Dashboard{% endblock %}

{% block body %}
    <h1 class="text-danger">Dashboard</h1>
    {% include 'template_parts_project_specific/dashboard_project_specific.html.twig' %}
    <br>
    <hr>
    <div class="row">
        <div class="col-2">
            <div class="border py-4">
                <h2 style="color: red">Company</h2>
                <ul>
                    <a target="_blank" href="{{ path('company_details_index') }}">Company Details</a>
                </ul>
                <ul>
                    <a target="_blank" href="{{ path('product_index') }}">Products/Interests</a>
                </ul>
            </div>
        </div>
        <div class="col-2">
            <div class="border py-4">
                <h2 style="color: red">CMS</h2>
                <ul>
                    <a target="_blank" href="{{ path('cms_copy_index') }}">Main-Page Copy</a>
                </ul>
                <ul>
                    <a target="_blank" href="{{ path('sub_page_index') }}">Sub-Page Copy</a>
                </ul>
                <ul>
                    <a target="_blank" href="{{ path('cms_photo_index') }}">Photos</a>
                </ul>
            </div>
        </div>


        <div class="col-2">
            <div class="border py-4">
                <h2 style="color: red">E-mails</h2>
                <ul>
                    <a target="_blank" href="{{ path('website_contacts_index') }}">In-Bound Requests</a>
                </ul>
                <hr>
                <ul>
                    <a target="_blank" href="{{ path('emails_import_index') }}">Emails: Pending</a>
                </ul>
                <ul>
                    <a target="_blank" href="{{ path('emails_import_index') }}">Emails: Processed</a>
                </ul>
                <ul>
                    <a target="_blank" href="">Emails Sent</a>
                </ul>
            </div>
        </div>
        <div class="col-12 col-md-2">
            <div class="border py-4">
                <h2 style="color: red">Users</h2>
                <ul>
                    <a target="_blank" href="{{ path('user_index') }}">Users</a>
                </ul>
                <ul>
                    <a href="{{ path('log_index') }}">User Log</a>
                </ul>
            </div>
        </div>
        <div class="col-12 col-md-2">
            <div class="border py-4">
                <h2 style="color: red">Set-Up</h2>
                <ul>
                    <a target="_blank" href="{{ path('instructions_index') }}">Instructions</a>
                </ul>
                <ul>
                    <a target="_blank" href="{{ path('languages_index') }}">Languages</a>
                </ul>
                <ul>
                    <a target="_blank" href="{{ path('translation_index') }}">Translations</a>
                </ul>
                <ul>
                    <a target="_blank" href="{{ path('weather_index') }}">Weather</a>
                </ul>
                {% if CompanyDetails.companyDetails is not null %}
                    {% if app.request.getSchemeAndHttpHost() == CompanyDetails.companyDetails.companyWebsite %}
                        <ul>
                            <a class="btn btn-outline-success btn-sm" target="_blank"
                               href="{{ path('export_live_database') }}">Export Live Data</a>
                        </ul>
                    {% endif %}
                {% endif %}
            </div>
        </div>
        <div class="col-2">
            <div class="border py-4">
                <h2 style="color: red">Helpful Links </h2>
                <ul><a target="_blank" href="{{ path('business_contacts_index') }}">Helpful Contacts</a></ul>
                <ul><a target="_blank" href="{{ path('business_types_index') }}">Business Categories</a></ul>
                <ul><a target="_blank" href="{{ path('referrals_index') }}">Referrals Log</a></ul>
            </div>
        </div>
        <div class="col-2">
            <div class="border py-4">
                <h2 style="color: red">Competitors</h2>
                <ul><a target="_blank" href="{{ path('facebook_groups_index') }}">Facebook Pages</a></ul>
                <ul><a target="_blank" href="{{ path('competitors_index') }}">Competitors</a></ul>
                <ul><a target="_blank" href="{{ path('competitor_service_index') }}">Competitor Services</a></ul>
            </div>
        </div>
    </div>

{% endblock %}
    {% block javascripts %}
        {{ parent() }}
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
        <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
        <script src="https://npmcdn.com/flatpickr/dist/l10n/fr.js"></script>
        <script src="{{ asset('admin/js/AGS.js') }}"></script>
    {% endblock javascripts %}

    {% block datatable %}
        <script>
            $(document).ready(function () {
                $('#table').DataTable({
                    'pageLength': 100,
                    "order": [[2, 'asc'], [3, 'asc'], [4, 'asc']],
                    "paging": true,
                    "searching": true,
                    "bInfo": true
                });
            });
        </script>
    {% endblock datatable %}
