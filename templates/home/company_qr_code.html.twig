{% extends 'base.html.twig' %}

{% block title %}{{ CompanyDetailsService.companyDetails.companyName }} {% endblock %}

{% block body %}
    <div class="row">
        {% set image = asset('administration/Attachments/FaviconsAndQR/')~qr_code %}
        <div class="col-lg-3 col-md-4 m-4 p-4">
            <div class="justify-content-center d-flex">
                <div class="homepage-gallery-image-container">
                    {% if qr_code is not null %}
                        <a title="{{ CompanyDetailsService.companyDetails.companyName }}" target="_blank" href="{{ path('create_vcard_company') }}">
                            <img class="homepage-image" src="{{ image }}">
                        </a>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
{% endblock body %}