{% extends 'base.html.twig' %}

{% block title %}Facebook Groups{% endblock %}

{% block body %}
    <h1 style="color: red">Facebook Groups</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ facebook_group.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ facebook_group.name }}</td>
            </tr>
            <tr>
                <th>Line</th>
                <td>{{ facebook_group.line }}</td>
            </tr>
            <tr>
                <th>Comments</th>
                <td>{{ facebook_group.comments }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('facebook_groups_index') }}">back to list</a>

    <a href="{{ path('facebook_groups_edit', {'id': facebook_group.id}) }}">edit</a>

