    <h1 style="color: red">Useful Links</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ useful_link.id }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ useful_link.category }}</td>
            </tr>
            <tr>
