{% extends '../../base.html.twig' %}

{% block title %}
    Users
{% endblock %}

{% block body %}

    <h1 style="color: red">Staff</h1>

    <br>

    <table class="table table-striped">
        <thead>
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Mobile</th>
            <th>Roles</th>
            <th>Checked</th>
            <th>#</th>
            <th>#</th>
        </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}</td>
                <td>
                    {{ user.mobile }}
                </td>
                <td>
                    {% for role in user.roles %}
                        {{ role }};
                    {% endfor %}
                </td>
                <td style="text-align: center">
                    {% if user.emailVerified ==1 %}
                        <i style="color: green" class="fa fa-check"></i>
                    {% else %}
                        <i style="color: red" class="fa fa-remove"></i>
                    {% endif %}
                    {#                    {{ user.emailVerified }} #}
                </td>
                <td>
                    <a class="btn btn-outline-danger btn-sm" target="_blank"
                       href="{{ path('user_edit', {'id': user.id}) }}">Edit</a>
                </td>
                <td>
                    <form method="post" action="{{ path('user_delete', {'id': user.id}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 100,
                "order": [[0, 'asc'], [1, 'asc']],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}
