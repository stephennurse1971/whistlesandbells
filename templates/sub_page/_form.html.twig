<style>
    .ck-editor__editable {
        min-height: 600px;
        max-height: 600px
    }
</style>
{{ form_start(form) }}
<div class="row">
    <div class="col-2">
        {{ form_row(form.product) }}
    </div>
    <div class="col-2">
        {{ form_row(form.title) }}
    </div>
    <div class="col-2">
        {{ form_row(form.ranking) }}
    </div>
    <div class="col-2">
        {{ form_row(form.image) }}
    </div>
    <div class="col-2">
        <br>
        <button class="btn btn-success btn-sm mb-1">{{ button_label|default('Save') }}</button>
    </div>
</div>

<div class="row">
    <div class="col-10">
        {{ form_row(form.content) }}
    </div>
</div>
{{ form_end(form) }}
