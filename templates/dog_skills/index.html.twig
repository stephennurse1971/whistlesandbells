{% extends 'base.html.twig' %}

{% block title %}Dog Skills{% endblock %}

{% block body %}
    <h1 style="color: red">Dog Skills</h1>

    <table class="table table-responsive">
        <thead>
            <tr>
                <th>Id</th>
                <th>Skill/<br>Behaviour</th>
                <th>Description</th>
                <th>Notes</th>
                <th>#</th>
                <th>#</th>
            </tr>
        </thead>
        <tbody>
        {% for dog_skill in dog_skills %}
            <tr>
                <td>{{ dog_skill.ranking }}</td>
                <td>{{ dog_skill.skillOrBehaviour }}</td>
                <td>{{ dog_skill.description }}</td>
                <td>{{ dog_skill.notes }}</td>
                <td>
                    <a class="btn btn-outline-danger btn-sm" href="{{ path('dog_skills_edit', {'id': dog_skill.id}) }}">Edit</a>
                </td>
                <td>
                    <form method="post" action="{{ path('dog_skills_delete', {'id': dog_skill.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ dog_skill.id) }}">
                        <button class="btn btn-danger btn-sm">Delete</button>
                    </form>

                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-success btn-sm" href="{{ path('dog_skills_new') }}">New</a>
{% endblock %}



{% block datatable %}
    <script>
        $(document).ready(function () {
            $('.table').DataTable({
                'pageLength': 100,
                "order":  [0, 'asc'],
                "paging": false,
                "searching": false,
                "bInfo": false
            });
        });
    </script>
{% endblock datatable %}
