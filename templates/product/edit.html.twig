{% extends 'base.html.twig' %}


{% block title %}Edit: {{ product.product }}{% endblock %}
{% block body %}
<style>
    .ck-content {
        height: 500px !important;
    }
</style>


    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}

    <h1 style="color: red">Edit: {{ product.product }}</h1>

    {{ include('product/_form.html.twig', {'button_label': 'Update'}) }}

    <a class="btn btn-outline-primary btn-sm mb-1" href="{{ path('product_index') }}">Return to list</a>

    {{ include('product/_delete_form.html.twig') }}
{% endblock %}


{% block additionaljs %}
    <script>
        ClassicEditor
            .create(document.querySelector('#product_notes'))
            .catch(error => {
                console.error(error);
            });
        ClassicEditor
            .create(document.querySelector('#product_newClientEmail'))
            .catch(error => {
                console.error(error);
            });
    </script>
{% endblock %}