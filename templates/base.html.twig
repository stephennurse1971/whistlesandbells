    <script>
        $(document).ready(function () {
            function detectMob() {
                return ((window.innerWidth <= 800) && (window.innerHeight <= 600));
            }

            var isMobile = detectMob();
            if (isMobile) {
                $('body').addClass('mobile');
            }
        });
    </script>

