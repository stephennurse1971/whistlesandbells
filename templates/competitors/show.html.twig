{% extends 'base.html.twig' %}

{% block title %}Competitors{% endblock %}

{% block body %}
    <h1 style="color: red">Competitors</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ competitor.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ competitor.name }}</td>
            </tr>
            <tr>
                <th>WebSite</th>
                <td>{{ competitor.webSite }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ competitor.telephone }}</td>
            </tr>
            <tr>
                <th>Facebook</th>
                <td>{{ competitor.facebook }}</td>
            </tr>
            <tr>
                <th>LinkedIn</th>
                <td>{{ competitor.linkedIn }}</td>
            </tr>
            <tr>
                <th>Instagram</th>
                <td>{{ competitor.instagram }}</td>
            </tr>
            <tr>
                <th>Twitter</th>
                <td>{{ competitor.twitter }}</td>
            </tr>
            <tr>
                <th>Type</th>
                <td>{{ competitor.type }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-outline-primary btn-sm" href="{{ path('competitors_index') }}">Return to list</a>

    <a class="btn btn-outline-danger btn-sm" href="{{ path('competitors_edit', {'id': competitor.id}) }}">edit</a>

    {{ include('Competitors/_delete_form.html.twig') }}
{% endblock %}
